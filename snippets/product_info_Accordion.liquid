{% assign ifGel = false%}
{% for tag in product.tags %}
{% if tag contains 'Gel Ice Packs' %}
     {% assign ifGel = true%}
{% endif %}
{% endfor %}
<div id="productPageinfoaccordion" class="accordion_container">
    <div class="accordion_head">Shipping Info<span class="plusminus">+</span></div>
    <div class="accordion_body">
        <p>Get <u><b>FREE shipping</b></u> if your order is over $75 - Terms apply.<br>
        For US domestic orders 2-3 business days, Others 3-5 business days</p>
        <a class="closeAccordion">Close</a>
    </div>
    <div class="accordion_head">Description<span class="plusminus">+</span></div>
    <div class="accordion_body" style="display: none;">
        <p>{{ product.description }}</p>
        <a class="closeAccordion">Close</a>
    </div>
    <div class="accordion_head">Specs<span class="plusminus">+</span></div>
    <div class="accordion_body" style="display: none;">
        {% assign productWidth = product.metafields.extrainfo.product_width.value %}
        {% assign productWeight = product.metafields.extrainfo.product_weight %}
        {% assign productMaterialsandFabrics = product.metafields.extrainfo.MaterialsandFabrics %}
        {% assign productLength = product.metafields.extrainfo.product_length.value %}
        {% assign productIngredients = product.metafields.extrainfo.Ingredients %}
        {% assign productHeight = product.metafields.extrainfo.product_height.value %}
        {% if productWidth or productLength or productHeight or productWeight%}
        <h4>Product extra information:</h4>
        {% endif %}
        <p>
          {% if productWidth %}
          <strong>Width:</strong> {{ productWidth }}<br>
          {% endif %}
          {% if productLength %}
          <strong>Length:</strong> {{ productLength }}<br>
          {% endif %}
          {% if productHeight %}
          <strong>Height:</strong> {{ productHeight }}<br>
          {% endif %}
          {% if productWeight %}
          <strong>Weight:</strong> {{ productWeight }}lb 
          {% endif %}
        </p>
        {% if productIngredients %}
        <br><h4>Product Ingredients:</h4>
        <p>
          {{ productIngredients }}
        </p>
        {% endif %}
        {% if productMaterialsandFabrics %}
        <br><h4>Product Materials and Fabrics:</h4>
        <p>
          {{ productMaterialsandFabrics }}
        </p>
        {% endif %}
    <a class="closeAccordion">Close</a>
    </div>
    {% if ifGel == false%}
<div class="accordion_head">About Our Products<span class="plusminus">+</span></div>
    <div class="accordion_body" style="display: none;">
    <p> All of our products are:<br>
            - 100% Natural Formula<br>
            - Reusable, Simple & Easy to use<br>
             {%comment%}Made In USA{%endcomment%}<br>
            
    </p>
    <a class="closeAccordion">Close</a>
    </div>
    {% endif %}
    {%if product.metafields.extraInfo.product_catalog %}
<div class="accordion_head">Brochure<span class="plusminus">+</span></div>
    <div class="accordion_body" style="display: none;">
        <p class="text-center">
            <a class="btn btn--primary"  target="_blank" href="{{ product.metafields.extraInfo.product_catalog.value.url }}">Download {{ product.title }} catalog</a>
        </p>
        <a class="closeAccordion">Close</a>
    </div>
    {%endif%}
    <div class="accordion_head">Get extra 10% off on first purchase<span class="plusminus">+</span></div>
    <div class="accordion_body" style="display: none;padding: 0 !important;">
        <div class="klaviyo-form-XZR8yU"></div>
        <a class="closeAccordion">Close</a>
    </div>
</div>
<script>
    jQuery(document).ready(function(){
	//toggle the component with class accordion_body
	jQuery(".accordion_head").on('click',function(){
		if (jQuery('.accordion_body').is(':visible')) {
			jQuery(".accordion_body").slideUp(300);
			jQuery(".plusminus").text('+');
		}
        if( jQuery(this).next(".accordion_body").is(':visible')){
            jQuery(this).next(".accordion_body").slideUp(300);
            jQuery(this).children(".plusminus").text('+');
        }else {
            jQuery(this).next(".accordion_body").slideDown(300); 
            jQuery(this).children(".plusminus").text('-');
        }
	});
    jQuery(".closeAccordion").on('click',function(){
        if (jQuery(window).width() < 480){ 
        document.querySelector('shopify-payment-terms').scrollIntoView({ 
            behavior: 'smooth' 
        });   
        }else{
            document.querySelector('#mainContent').scrollIntoView({ 
            behavior: 'smooth' 
        });
        }
        jQuery(this).parent(".accordion_body").prev(".accordion_head").click(); 
    });
    jQuery('.product-single__meta .review-badge .jdgm-widget').on('click',function(){
        if (jQuery(window).width() < 480){ 
        document.querySelector('shopify-payment-terms').scrollIntoView({ 
            behavior: 'smooth' 
        });   
        }else{
            document.querySelector('#mainContent').scrollIntoView({ 
            behavior: 'smooth' 
        });
        }
        setTimeout(function() {
            jQuery('#reviewAccordion').click();
        }, 600);

});
});
</script>